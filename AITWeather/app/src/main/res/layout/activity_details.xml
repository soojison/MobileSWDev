<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="io.github.soojison.aitweather.DetailsActivity">

    <!-- todo: factor out to include statements -->

    <include layout="@layout/toolbar_layout"/>

    <!-- view when city does not exist -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/viewInvalidCity">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-100dp"
            android:paddingBottom="10dp"
            android:id="@+id/imgNotFound"
            android:src="@drawable/notfound" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="@string/city_does_not_exist"
            android:layout_alignBottom="@id/imgNotFound"/>
    </RelativeLayout>

    <!-- view when other error occurrs- timeout, etc -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/viewError">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-100dp"
            android:paddingBottom="10dp"
            android:id="@+id/imgError"
            android:src="@drawable/timeout" />
        <TextView
            android:id="@+id/tvErrorDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_alignBottom="@id/imgError"/>
    </RelativeLayout>

    <!-- view when city exists -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/viewWithWeatherData"
        android:padding="16dp">

            <!-- card for general info -->
            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                card_view:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <!-- header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="96dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/imgWeatherIcon"
                            android:layout_weight="1"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvCurrentTemp"
                            android:textSize="36sp"
                            android:layout_marginLeft="@dimen/activity_vertical_margin"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:id="@+id/tvDescription"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <!-- card for misc info -->
            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp">


                <com.wefika.flowlayout.FlowLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:flowlayout="http://schemas.android.com/apk/res/si.solarb.flowlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center">

                    <include layout="@layout/details_wind_layout" />
                    <include layout="@layout/details_pressure_layout" />
                    <include layout="@layout/details_humidity_layout" />
                    <include layout="@layout/details_cloud_layout" />
                    <include layout="@layout/details_sunrise_layout" />
                    <include layout="@layout/details_sunset_layout" />

                </com.wefika.flowlayout.FlowLayout>


            </android.support.v7.widget.CardView>


    </LinearLayout>
    </ScrollView>


</LinearLayout>
